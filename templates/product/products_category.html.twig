{% extends 'base.html.twig' %}
{% block title %}Category index{% endblock %}
{% block body %}
    {{ parent() }}
    <div class="container">
        <div class="row d-flex justify-content-center my-4">
            <div class="col-md-8">
                <div class="row">
                    {% for product in products %}
                        <div class="col-md-6 d-flex bd-highlight my-1 rounded-sm bg-white">
                            <div class="p-2 bd-highlight border">
                                <img src="{{ asset('uploads/product/'~product.photo) }}" alt="{{ product.name }}"
                                     width="100%">
                                <hr>
                                <h4>{{ product.name }}</h4>
                                <small>precio: ${{ product.price }}</small>
                                <p>{{ product.description }}</p>
                                <div>
                                    <a href="{{ path('product_show',{id:product.id}) }}">Ver</a>
                                    <a href="{{ path('product_edit',{id:product.id}) }}">Editar</a>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="alert alert-warning">No hay categorías registradas</div>
                    {% endfor %}
                </div>
            </div>
            <div class="col-md-4">
                <div class="border my-2">
                    <div class="p-2" style="background-color: #b3b7bb; color: white">
                        <strong>Carrito de compras</strong> - Confirmar Pedido</div>
                    <div class="p-2">
                        <div class="p-1 my-2 rounded border">
                            <h6>Aguardiente Blanco Del Valle</h6>
                            <div><small>Precio Unidad: $1500</small></div>
                            <div class="row">
                                <div class="col-md-6"><small>Cantidad: 2</small></div>
                                <div class="col-md-6 text-right">
                                    <small><strong>Total: $3.000</strong></small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="border p-5 my-4 text-center">
                    LOGO AQUÍ
                </div>
            </div>
        </div>
    </div>
{% endblock %}