{% extends 'base.html.twig' %}
{% block title %}Products index{% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block body %}
    {{ parent() }}
    <div class="container">
        <div class="row d-flex justify-content-center my-4">
            <div class="col-md-8">
                <div class="row">
                    {% for product in products %}
                        <div class="col-md-6 d-flex bd-highlight my-1 rounded-sm bg-white">
                            <div class="p-2 bd-highlight border">
                                <img src="{{ asset('uploads/product/'~product.photo) }}" alt="{{ product.name }}"
                                     width="100%">
                                <hr>
                                <h5>{{ product.name }}</h5>
                                <small>precio: ${{ product.price }}</small>
                                <hr>
                                <button class="btn btn-success btn-block add_car" data-id="{{ product.id }}"
                                        data-hash="{{ app.user.hash }}">
                                    Agregar al carrito
                                </button>
                                {#                                <div>#}
                                {#                                    <a href="{{ path('product_show',{id:product.id}) }}">Ver</a>#}
                                {#                                    <a href="{{ path('product_edit',{id:product.id}) }}">Editar</a>#}
                                {#                                </div>#}
                            </div>
                        </div>
                    {% else %}
                        <div class="alert alert-warning">No hay categorías registradas</div>
                    {% endfor %}
                </div>
            </div>
            <div class="col-md-4">
                <div class="border my-2">
                    <div class="p-2" style="background-color: #b3b7bb; color: white">
                        <strong>Carrito de compras</strong> - Confirmar Pedido
                    </div>
                    <div id="shopping_car" style="width: 100%; height: 250px; overflow-y: scroll; overflow-x: hidden;">
                        {% if order is not null %}
                            {% for productorder in order.productOrders %}
                                {% set product = productorder.product %}
                                <div class="p-2">
                                    <div class="p-1 rounded border">
                                        <h6>{{ product.name }}</h6>
                                        <div><small>Precio Unidad: ${{ product.price }}</small></div>
                                        <div class="row">
                                            <div class="col-md-6"><small>Cantidad: {{ productorder.cantidad }}</small>
                                            </div>
                                            <div class="col-md-6 text-right">
                                                <small><strong>SubTotal: {{ product.price * productorder.cantidad }}</strong></small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        {% else %}
                            <div class="p-2">
                                <div class="alert alert-danger ">No ha agregado productos al carrito</div>
                            </div>
                        {% endif %}
                    </div>
                </div>
                <div class="border p-5 my-4 text-center">
                    LOGO AQUÍ
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/fosjsrouting/js/router.min.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
    <script src="{{ asset('assets/js/shopping_car.js') }}"></script>
{% endblock %}