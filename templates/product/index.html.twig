{% extends 'base.html.twig' %}
{% block title %}Product index{% endblock %}
{% block body %}
    {{ parent() }}
    <div class="container">
        <a href="{{ path('product_new') }}">Create new</a>
        <div class="container">
            <div class="row d-flex justify-content-center my-4">
                {% for product in products %}
                    <div class="col-md-4 d-flex bd-highlight my-1 rounded-sm bg-white category">
                        <div class="p-2 bd-highlight border">
                            <img src="{{ asset('uploads/product/'~product.photo) }}" alt="{{ product.name }}" width="100%">
                            <hr>
                            <h4>{{ product.name }}</h4>
                            <small>precio: ${{ product.price }}</small>
                            <p>{{ product.description }}</p>
                            <div>
                                <a href="{{ path('product_show',{id:product.id}) }}">Ver</a>
                                <a href="{{ path('product_edit',{id:product.id}) }}">Editar</a>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="alert alert-warning">No hay productos registrados</div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
