{% extends 'base.html.twig' %}
{% block title %}{{product.name}}{% endblock %}
{% block body %}
    {{ parent() }}
    <div class="container">
        <div class="row my-2">
            <div class="col-md-4 border p-3">
                <img src="{{ asset('uploads/product/'~product.photo) }}" alt="{{ product.name }}" width="100%">
            </div>
            <div class="col-md-8 text-left border p-3">
                <h4>{{ product.name }}</h4>
                <div><small>Precio: ${{ product.price }}</small></div>
                <div><small>Descuento: ${{ product.discount }}</small></div>
                <hr>
                <p>{{ product.description }}</p>
            </div>
            <div class="col-md-12">
                <a class="btn btn-success btn-block my-2" href="{{ path('product_index') }}">Regresar a Lista de productos</a>
                <a class="btn btn-warning btn-block my-2" href="{{ path('product_edit', {'id': product.id}) }}">Editar Producto {{ product.name }}</a>
                {#    {{ include('category/_delete_form.html.twig') }}#}
            </div>
        </div>
    </div>
{% endblock %}
