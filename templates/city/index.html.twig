{% extends 'base.html.twig' %}

{% block title %}Ciudades{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container my-4">
        <h1>Ciudades Registradas</h1>

        <table class="table">
            <thead>
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>accciones</th>
            </tr>
            </thead>
            <tbody>
            {% for city in cities %}
                <tr>
                    <td>{{ city.id }}</td>
                    <td>{{ city.name }}</td>
                    <td>
                        <a href="{{ path('city_show', {'id': city.id}) }}"><i class="fas fa-eye"></i> Ver  </a> |
                        <a href="{{ path('city_edit', {'id': city.id}) }}"> <i class="fas fa-pencil-alt"></i> editar</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-info btn-block" href="{{ path('city_new') }}"> Crear nueva ciudad</a>
    </div>
{% endblock %}
